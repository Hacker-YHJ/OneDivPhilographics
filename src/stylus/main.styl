@import 'nib'
global-reset()

@font-face
   font-family Harabara
   font-style normal
   src url(fonts/Harabara.otf)
a,
a:visited,
a:active,
a:link
  text-decoration: none
  color: inherit

html, body
  height: 100%
  width: 100%
  &::before
    content: ''
    position: absolute
    width: 100%
    height: 100%
  transition: all .4s ease-out

main
  position: absolute
  width: 100px
  margin: 0
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  transition: all .4s ease-out

#elem
  transition: all .4s ease-out

#title
  font-family: Harabara
  position: absolute
  top: 7.89%
  left: 10%
  font-size: 4.8vmin
  transition: all .4s ease-out

#desc
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  position: absolute
  top: 13.63%
  left: 10%
  font-size: 1.2vmin
  max-width: 80%
  line-height: 1.5vmin
  transition: all .4s ease-out

#credit
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  position: absolute
  bottom: 5%
  left: 50%
  transform: translateX(-50%)
  font-size: 1.2vmin
  line-height: 1.5vmin
  white-space: nowrap
  transition: all .4s ease-out

body[data-philosophy=absolutism]
  background-color: white
  &::before
    background-color: rgba(0, 0, 0, 0.02)
  main
    background-color: white
  #title
    color: black
  #desc
    color: #999
  #credit
    color: #999
  #elem
    position: absolute
    background-color: black
    width: 30%
    padding-bottom: 30%
    border-radius: 50%
    margin: 0
    top: 54%
    left: 50%
    transform: translate(-50%, -50%)

  a:hover
    color: black

body[data-philosophy=altruism]
  background-color: #65B7FF
  &::before
    background-color: rgba(255, 255, 255, 0.2)
  main
    background-color: #65B7FF
  #title
    color: white
  #desc
    color: #EEE
  #credit
    color: #EEE
  #elem
    position: absolute
    background-color: white
    width: 38%
    padding-bottom: 38%
    border-radius: 50%
    margin: 0
    top: 55%
    left: 50%
    transform: translate(-50%, -50%)
  #elem::before
    content: ''
    position: absolute
    width: 148%
    height: 148%
    left: -24%
    top: -24%
    background: linear-gradient(-45deg, rgba(255, 255, 255, 0.4) 19%,  transparent 19%, transparent 81%, rgba(255, 255, 255, 0.4) 81%)
  #elem::after
    content: ''
    position: absolute
    width: 148%
    height: 148%
    left: -24%
    top: -24%
    background: linear-gradient(45deg, rgba(255, 255, 255, 0.4) 19%,  transparent 19%, transparent 81%, rgba(255, 255, 255, 0.4) 81%)

  a:hover
    color: white
