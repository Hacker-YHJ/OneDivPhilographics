@import 'nib'
global-reset()

@font-face
   font-family Harabara
   font-style normal
   src url(fonts/Harabara.otf)
a,
a:visited,
a:active,
a:link
  text-decoration: none
  color: inherit
  transition: all 1s ease-in

html, body
  height: 100%
  width: 100%
  &::before
    content: ''
    position: absolute
    width: 100%
    height: 100%
  transition: all 1s ease-in

main
  position: absolute
  width: 100px
  margin: 0
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  transition: all 1s ease-in

#elem
  transition: all 1s ease-in

#title
  font-family: Harabara
  position: absolute
  top: 7.89%
  left: 10%
  font-size: 4.8vmin

#desc
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  position: absolute
  top: 13.63%
  left: 10%
  font-size: 1.2vmin
  max-width: 80%
  color: #999
  line-height: 1.5vmin

#credit
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  position: absolute
  bottom: 5%
  left: 50%
  transform: translateX(-50%)
  font-size: 1.2vmin
  color: #999
  line-height: 1.5vmin
  white-space: nowrap

body[data-philosophy=absolutism]
  &::before
    background-color: rgba(0, 0, 0, 0.02)
  background-color: white
  main
    background-color: white
  #elem
    position: absolute
    background-color: black
    width: 30%
    padding-bottom: 30%
    border-radius: 50%
    margin: 0
    top: 54%
    left: 50%
    transform: translate(-50%, -50%)

  a:hover
    color: black
