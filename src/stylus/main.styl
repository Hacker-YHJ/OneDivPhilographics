      background-image: linear-gradient(315deg, transparent 50%, #1C82CE 50%),
                        linear-gradient(0deg, transparent 50%, #006038 50%),
                        linear-gradient(45deg, transparent 50%, #018345 50%),
                        linear-gradient(90deg, transparent 50%, #27B54A 50%)
      border-radius: 50%
      width: 100%
      height: 100%
      top: 0
      left: 0
      clip-path: inset(0 50% 0 0)
