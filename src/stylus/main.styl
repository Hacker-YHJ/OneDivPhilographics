@import 'nib'
global-reset()

@font-face
   font-family Harabara
   font-style normal
   src url(fonts/Harabara.otf)
a,
a:visited,
a:active,
a:link
  z-index: 999
  text-decoration: none
  color: inherit

html, body
  height: 100%
  width: 100%
  &::before
    content: ''
    position: absolute
    width: 100%
    height: 100%
  transition: background-color .4s ease-out

#black
  position: absolute
  height: 100%
  width: 100%
  background-color: rgba(0, 0, 0, 0.2)
  transition: opacity .4s ease-out
  will-change: opacity
  opacity: 0

#popout
  position: absolute
  width: 40%
  left: 50%
  padding-bottom: 8rem
  top: 50%
  background-color: white
  font-family: Harabara
  transform: translate(-50%, -50%)
  text-align: center
  font-size: 2rem
  transition: opacity .4s ease-out
  will-change: opacity
  opacity: 0

  svg
    height: 20rem
    width: 20rem

main
  position: absolute
  margin: 0
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  transition: height .4s ease-out, width .4s ease-out, background-color .4s ease-out

#elem
  transition: all .4s ease-out
  will-change: transform

#title
  font-family: Harabara
  position: absolute
  top: 7.89%
  left: 9%
  font-size: 4.8vh
  transition: color .4s ease-out

#desc
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  position: absolute
  font-weight: 300
  letter-spacing: .05rem
  color: rgba(255, 255, 255, 0.5)
  top: 13.63%
  left: 9%
  font-size: 1.2vh
  max-width: 74.5%
  line-height: 1.5vh
  transition: color .4s ease-out

#credit
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  position: absolute
  font-weight: 300
  letter-spacing: .05rem
  color: rgba(255, 255, 255, 0.5)
  bottom: 5%
  left: 50%
  transform: translateX(-50%)
  font-size: 1.2vh
  line-height: 1.5vh
  white-space: nowrap
  transition: color .4s ease-out

body[data-philosophy=absolutism]
  background-color: white
  &::before
    background-color: rgba(0, 0, 0, 0.02)
  main
    background-color: white
  #title
    color: black
  #desc
    color: #999
  #credit
    color: #999
  #elem
    position: absolute
    background-color: black
    width: 30%
    padding-bottom: 30%
    border-radius: 50%
    margin: 0
    top: 54%
    left: 50%
    transform: translate(-50%, -50%)

